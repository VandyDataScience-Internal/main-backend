generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGO")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
}

model Opportunities {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  status            String @db.String
  opportunityName   String @db.String 
  companyName       String @db.String 
  requirements      String @db.String
  additionalDetail  String @db.String
  emailLink         String @db.String
}
