generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String  @unique
  name  String?
}

model Post {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String
  content   String?
  published Boolean  @default(false)
  viewCount Int      @default(0)
}

model Opportunities {
  id                String @id @default(auto()) @map("_id") @db.ObjectId
  status            String @db.String @index
  opportunityName   String @db.String @index
  companyName       String @db.String @index
  requirements      String @db.String
  additionalDetail  String @db.String
  emailLink         String @db.String
}
